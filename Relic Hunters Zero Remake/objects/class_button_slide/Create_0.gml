/// @description Variables

event_inherited();

#region Displacement.

	move_speed = 0;				// Speed at which the button moves.
	start_x = x;				// Initial position on the horizontal axis of the button.
	start_y = y;				// Initial position on the vertial axis of the button.
	current_x = start_x;		// Current position on the horizontal axis of the button.
	current_y = start_y;		// Current position on the vertical axis of the button.
	final_x = x;				// Final position on the horizontal axis of the button.
	final_y = y;				// Final position on the vertical axis of the button.
	
#endregion